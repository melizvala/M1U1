<div class="container" style="margin-top: 50px; ">
    <div class="row">
        <!--Fila1-->
        <div class="col">
            <p class="text-end">
                <span style="font-size:30px;">¡Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-secondary" style="margin-left: 10px;">Cerrar sesión <i
                        class="fas fa-sign-out-alt "></i></a>
            </p>
        </div>
    </div>
    <!--Fila1-->
    <!--Fila2-->
    <div class="row">
        <div class="col-6" style="margin-top: -9px;">
            <h2>Recomendaciones y Novedades</h2>
        </div>
        <div class="col-4 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>NUEVO</a>
        </div>
    </div><!-- fin Fila2-->
    <!--Fila 3 tabla-->
    <div class="row" style="margin-bottom: 51px;">
        <div class="col">
            <table class="table " style="margin-top: 10px;">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col"></th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr class="table-light">
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}} " class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}} " class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>

                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <!-- fin Fila 3 -->
</div>